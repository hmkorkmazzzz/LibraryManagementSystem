@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Kitap Düzenle";
}

<h2>Kitap Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Yazar</label>
        <input asp-for="Author" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Yayın Yılı</label>
        <input asp-for="Year" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        <input asp-for="Category" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">İptal</a>
</form>
